# =============================================================================
# XSS Hunter Express - Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values below for your deployment
# This configuration is optimized for Dokploy deployment

# =============================================================================
# CORE CONFIGURATION (REQUIRED)
# =============================================================================
# Generate a strong random key for session encryption
SESSION_SECRET_KEY=your_super_secret_session_key_here

# Your domain configuration - CRITICAL for XSS Hunter to work properly
HOSTNAME=admin.yourdomain.com
XSS_HOSTNAME=xss.yourdomain.com

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Panel login settings
PANEL_LOGIN=true
PANEL_USERNAME=admin@yourdomain.com
PANEL_PASSWORD=your_secure_admin_password
ALLOW_EMPTY_USERPATH=true

# OAuth settings (optional - set OAUTH_LOGIN=true to enable)
OAUTH_LOGIN=false
CLIENT_ID=
CLIENT_SECRET=
GMAIL_ACCOUNTS=

# =============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_FROM=
SENDGRID_API_KEY=
SENDGRID_UNSUBSRIBE_GROUP_ID=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection (automatically configured for Docker)
DATABASE_HOST=xsshunterexpress-db
POSTGRES_DB=xsshunterexpress
POSTGRES_USER=xsshunterexpress
POSTGRES_PASSWORD=xsshunterexpress_secure_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=8080
CONTROL_PANEL_ENABLED=true

# Port configuration for Dokploy (customize if needed)
APP_PORT=8080
TRUFFLEHOG_PORT=8000

# =============================================================================
# MONITORING & LOGGING (OPTIONAL)
# =============================================================================
SENTRY_DSN=
SENTRY_ENABLED=false

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================
USE_CLOUD_STORAGE=false
BUCKET_NAME=

# =============================================================================
# DOKPLOY DEPLOYMENT NOTES
# =============================================================================
# 1. Make sure your domain DNS points to your Dokploy server
# 2. Configure SSL certificates in Dokploy for both HOSTNAME and XSS_HOSTNAME
# 3. The application will be available on the APP_PORT (default: 8080)
# 4. Dokploy will handle the reverse proxy, so no Caddy is needed
# 5. Persistent volumes are automatically managed by Docker Compose
